<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All offices
    </h1>

    <a href="/offices/new" class="btn btn-block btn-outline-secondary">
      Add a new office
    </a>
  </div>
</div>



<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "office_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Phone number
        </th>

        <th>
          Logo
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @offices.each do |office| %>
      <tr>
        <td>
          <%= office.id %>
        </td>

        <td>
          <%= office.name %>
        </td>

        <td>
          <%= office.address %>
        </td>

        <td>
          <%= office.phone_number %>
        </td>

        <td>
          <img src='<%= office.logo %>' class='img-fluid'>
        </td>

        <td>
          <%= office.email %>
        </td>

        <td>
          <%= office.password %>
        </td>

        <td>
          <%= time_ago_in_words(office.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(office.updated_at) %> ago
        </td>

        <td>
          <a href="/offices/<%= office.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @offices, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
