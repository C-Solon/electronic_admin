<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Office #<%= @office.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/offices" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/offices/<%= @office.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit office
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @office.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <div>
          <%= render partial: "office_templates/one_photo_map" %>
        </div>
      </dd>

      <dt>
        Phone number
      </dt>
      <dd>
        <%= @office.phone_number %>
      </dd>

      <dt>
        Logo
      </dt>
      <dd>
        <img src="<%= @office.logo %>" class="img-fluid">
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @office.email %>
      </dd>

      <dt>
        Password
      </dt>
      <dd>
        <%= @office.password %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@office.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@office.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "office_templates/office_appointments" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "office_templates/office_work_relationships" %>
  </div>
</div>
