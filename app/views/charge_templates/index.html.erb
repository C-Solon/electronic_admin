<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All charges
    </h1>

    <a href="/charges/new" class="btn btn-block btn-outline-secondary">
      Add a new charge
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Amount
        </th>

        <th>
          Paid
        </th>

        <th>
          Appointment
        </th>

        <th>
          Treatment
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @charges.each do |charge| %>
      <tr>
        <!-- Display charge.id start -->
        <td>
          <%= charge.id %>
        </td>
        <!-- Display charge.id end -->

        <!-- Display charge.amount start -->
        <td>
          <%= charge.amount %>
        </td>
        <!-- Display charge.amount end -->

        <!-- Display charge.paid start -->
        <td>
          <%= charge.paid %>
        </td>
        <!-- Display charge.paid end -->

        <!-- Display charge.appointment_id start -->
        <td>
          <%= charge.appointment.office_id %>
        </td>
        <!-- Display charge.appointment_id end -->

        <!-- Display charge.treatment_id start -->
        <td>
          <%= charge.treatment.name %>
        </td>
        <!-- Display charge.treatment_id end -->

        <!-- Display charge.created_at start -->
        <td>
          <%= time_ago_in_words(charge.created_at) %> ago
        </td>
        <!-- Display charge.created_at end -->

        <!-- Display charge.updated_at start -->
        <td>
          <%= time_ago_in_words(charge.updated_at) %> ago
        </td>
        <!-- Display charge.updated_at end -->

        <td>
          <a href="/charges/<%= charge.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
