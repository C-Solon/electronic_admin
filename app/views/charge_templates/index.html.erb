<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All charges
    </h1>

    <a href="/charges/new" class="btn btn-block btn-outline-secondary">
      Add a new charge
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "charge_templates/charges_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Amount
        </th>

        <th>
          Paid
        </th>

        <th>
          Appointment
        </th>

        <th>
          Treatment
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @charges.each do |charge| %>
      <tr>
        <td>
          <%= charge.id %>
        </td>

        <td>
          <%= charge.amount %>
        </td>

        <td>
          <%= charge.paid %>
        </td>

        <td>
          <% if charge.appointment.present? %>
            <a href="/appointments/<%= charge.appointment.id %>">
              <%= charge.appointment.office_id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if charge.treatment.present? %>
            <a href="/treatments/<%= charge.treatment.id %>">
              <%= charge.treatment.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(charge.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(charge.updated_at) %> ago
        </td>

        <td>
          <a href="/charges/<%= charge.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @charges, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
