<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Charge #<%= @charge.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/charges" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/charges/<%= @charge.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit charge
        </a>
      </div>

      <div class="col">
        <a href="/delete_charge/<%= @charge.id %>" class="btn btn-block btn-outline-secondary">
          Delete charge
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Amount
      </dt>
      <dd>
        <%= @charge.amount %>
      </dd>

      <dt>
        Paid
      </dt>
      <dd>
        <%= @charge.paid %>
      </dd>

      <dt>
        Appointment
      </dt>
      <dd>
        <% if @charge.appointment.present? %>
          <a href="/appointments/<%= @charge.appointment_id %>">
            <%= @charge.appointment.office_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Treatment
      </dt>
      <dd>
        <% if @charge.treatment.present? %>
          <a href="/treatments/<%= @charge.treatment_id %>">
            <%= @charge.treatment.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@charge.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@charge.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

