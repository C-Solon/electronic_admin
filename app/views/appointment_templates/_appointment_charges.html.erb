<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Charges

    <a data-toggle="collapse" href="#appointment_charges_new_form">
      Add charge
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @appointment.charges.each do |charge| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/charges/<%= charge.id %>">
          <%= charge.amount %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_charge_from_appointment/<%= charge.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="appointment_charges_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "appointment_templates/appointment_charges_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
