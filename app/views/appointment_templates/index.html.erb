<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All appointments
    </h1>

    <a href="/appointments/new" class="btn btn-block btn-outline-secondary">
      Add a new appointment
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "appointment_templates/appointments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Office
        </th>

        <th>
          Patient
        </th>

        <th>
          Professional
        </th>

        <th>
          Charge
        </th>

        <th>
          Notes
        </th>

        <th>
          Time slot
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @appointments.each do |appointment| %>
      <tr>
        <td>
          <%= appointment.id %>
        </td>

        <td>
          <% if appointment.office.present? %>
            <a href="/offices/<%= appointment.office.id %>">
              <%= appointment.office.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if appointment.patient.present? %>
            <a href="/patients/<%= appointment.patient.id %>">
              <%= appointment.patient.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if appointment.professional.present? %>
            <a href="/professionals/<%= appointment.professional.id %>">
              <%= appointment.professional.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= appointment.charge_id %>
        </td>

        <td>
          <%= appointment.notes %>
        </td>

        <td>
          <%= appointment.time_slot %>
        </td>

        <td>
          <%= time_ago_in_words(appointment.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(appointment.updated_at) %> ago
        </td>

        <td>
          <a href="/appointments/<%= appointment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @appointments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
