<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All appointments
    </h1>

    <a href="/appointments/new" class="btn btn-block btn-outline-secondary">
      Add a new appointment
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Office
        </th>

        <th>
          Patient
        </th>

        <th>
          Professional
        </th>

        <th>
          Charge
        </th>

        <th>
          Notes
        </th>

        <th>
          Time slot
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @appointments.each do |appointment| %>
      <tr>
        <!-- Display appointment.id start -->
        <td>
          <%= appointment.id %>
        </td>
        <!-- Display appointment.id end -->

        <!-- Display appointment.office_id start -->
        <td>
          <%= appointment.office.name %>
        </td>
        <!-- Display appointment.office_id end -->

        <!-- Display appointment.patient_id start -->
        <td>
          <%= appointment.patient.created_at %>
        </td>
        <!-- Display appointment.patient_id end -->

        <!-- Display appointment.professional_id start -->
        <td>
          <%= appointment.professional.created_at %>
        </td>
        <!-- Display appointment.professional_id end -->

        <!-- Display appointment.charge_id start -->
        <td>
          <%= appointment.charge_id %>
        </td>
        <!-- Display appointment.charge_id end -->

        <!-- Display appointment.notes start -->
        <td>
          <%= appointment.notes %>
        </td>
        <!-- Display appointment.notes end -->

        <!-- Display appointment.time_slot start -->
        <td>
          <%= appointment.time_slot %>
        </td>
        <!-- Display appointment.time_slot end -->

        <!-- Display appointment.created_at start -->
        <td>
          <%= time_ago_in_words(appointment.created_at) %> ago
        </td>
        <!-- Display appointment.created_at end -->

        <!-- Display appointment.updated_at start -->
        <td>
          <%= time_ago_in_words(appointment.updated_at) %> ago
        </td>
        <!-- Display appointment.updated_at end -->

        <td>
          <a href="/appointments/<%= appointment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
