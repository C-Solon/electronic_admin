<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Appointment #<%= @appointment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/appointments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link appointment start -->
      <div class="col">
        <a href="/appointments/<%= @appointment.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit appointment
        </a>
      </div>
      <!-- Edit link appointment end -->

      <!-- Delete link appointment start -->
      <div class="col">
        <a href="/delete_appointment/<%= @appointment.id %>" class="btn btn-block btn-outline-secondary">
          Delete appointment
        </a>
      </div>
      <!-- Delete link appointment end -->
    </div>

    <dl>
      <dt>
        Office
      </dt>
      <!-- Display office_id start -->
      <dd>
        <%= @appointment.office_id %>
      </dd>
      <!-- Display office_id end -->

      <dt>
        Patient
      </dt>
      <!-- Display patient_id start -->
      <dd>
        <%= @appointment.patient_id %>
      </dd>
      <!-- Display patient_id end -->

      <dt>
        Professional
      </dt>
      <!-- Display professional_id start -->
      <dd>
        <%= @appointment.professional_id %>
      </dd>
      <!-- Display professional_id end -->

      <dt>
        Charge
      </dt>
      <!-- Display charge_id start -->
      <dd>
        <%= @appointment.charge_id %>
      </dd>
      <!-- Display charge_id end -->

      <dt>
        Notes
      </dt>
      <!-- Display notes start -->
      <dd>
        <%= @appointment.notes %>
      </dd>
      <!-- Display notes end -->

      <dt>
        Time slot
      </dt>
      <!-- Display time_slot start -->
      <dd>
        <%= @appointment.time_slot %>
      </dd>
      <!-- Display time_slot end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@appointment.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@appointment.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

