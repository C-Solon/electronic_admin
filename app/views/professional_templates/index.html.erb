<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Phone number
        </th>

        <th>
          Picture
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @professionals.each do |professional| %>
      <tr>
        <!-- Display professional.id start -->
        <td>
          <%= professional.id %>
        </td>
        <!-- Display professional.id end -->

        <!-- Display professional.first_name start -->
        <td>
          <%= professional.first_name %>
        </td>
        <!-- Display professional.first_name end -->

        <!-- Display professional.last_name start -->
        <td>
          <%= professional.last_name %>
        </td>
        <!-- Display professional.last_name end -->

        <!-- Display professional.phone_number start -->
        <td>
          <%= professional.phone_number %>
        </td>
        <!-- Display professional.phone_number end -->

        <!-- Display professional.picture start -->
        <td>
          <%= professional.picture %>
        </td>
        <!-- Display professional.picture end -->

        <!-- Display professional.email start -->
        <td>
          <%= professional.email %>
        </td>
        <!-- Display professional.email end -->

        <!-- Display professional.password start -->
        <td>
          <%= professional.password %>
        </td>
        <!-- Display professional.password end -->

        <!-- Display professional.created_at start -->
        <td>
          <%= time_ago_in_words(professional.created_at) %> ago
        </td>
        <!-- Display professional.created_at end -->

        <!-- Display professional.updated_at start -->
        <td>
          <%= time_ago_in_words(professional.updated_at) %> ago
        </td>
        <!-- Display professional.updated_at end -->

        <td>
          <a href="/professionals/<%= professional.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
