<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All professionals
    </h1>

    <a href="/professionals/new" class="btn btn-block btn-outline-secondary">
      Add a new professional
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Phone number
        </th>

        <th>
          Picture
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @professionals.each do |professional| %>
      <tr>
        <td>
          <%= professional.id %>
        </td>

        <td>
          <%= professional.first_name %>
        </td>

        <td>
          <%= professional.last_name %>
        </td>

        <td>
          <%= professional.phone_number %>
        </td>

        <td>
          <img src='<%= professional.picture %>' class='img-fluid'>
        </td>

        <td>
          <%= professional.email %>
        </td>

        <td>
          <%= professional.password %>
        </td>

        <td>
          <%= time_ago_in_words(professional.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(professional.updated_at) %> ago
        </td>

        <td>
          <a href="/professionals/<%= professional.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @professionals, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
