<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Specialty #<%= @specialty.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/specialties" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/specialties/<%= @specialty.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit specialty
        </a>
      </div>

      <div class="col">
        <a href="/delete_specialty/<%= @specialty.id %>" class="btn btn-block btn-outline-secondary">
          Delete specialty
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@specialty.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@specialty.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "specialty_templates/specialty_specializations" %>
  </div>
</div>
