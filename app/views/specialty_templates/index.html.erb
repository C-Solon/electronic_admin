<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All specialties
    </h1>

    <a href="/specialties/new" class="btn btn-block btn-outline-secondary">
      Add a new specialty
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "specialty_templates/specialties_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @specialties.each do |specialty| %>
      <tr>
        <td>
          <%= specialty.id %>
        </td>

        <td>
          <%= time_ago_in_words(specialty.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(specialty.updated_at) %> ago
        </td>

        <td>
          <a href="/specialties/<%= specialty.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @specialties, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
