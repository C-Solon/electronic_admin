<!-- Validation failure messages -->
<% if @specialty.present? %>
  <% if @specialty.errors.any? %>
    <% @specialty.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

