<!-- Validation failure messages -->
<% if @work_relationship.present? %>
  <% if @work_relationship.errors.any? %>
    <% @work_relationship.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new work relationship
</h1>


<hr>

<!-- Form work_relationship start -->
<form action="/create_work_relationship" method="post">
<!-- Form work_relationship end -->

  <!-- Label and input for professional_id start -->
  <div class="form-group">
    <label for="professional_id">
      Professional
    </label>

    <!-- Input for professional_id start -->
    <%= select_tag(:professional_id, options_from_collection_for_select(Professional.all, :id, :created_at, @work_relationship.professional_id), :class => "form-control") %>
    <!-- Input for professional_id end -->
  </div>
  <!-- Label and input for professional_id end -->

  <!-- Label and input for office_id start -->
  <div class="form-group">
    <label for="office_id">
      Office
    </label>

    <!-- Input for office_id start -->
    <input type="text" id="office_id" name="office_id" class="form-control" value="<%= @work_relationship.office_id %>">
    <!-- Input for office_id end -->
  </div>
  <!-- Label and input for office_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create work relationship
  </button>
</form>

<hr>

<a href="/work_relationships">
  Go back
</a>
