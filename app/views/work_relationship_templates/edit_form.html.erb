<h1>
  Edit work relationship #<%= @work_relationship.id %>
</h1>

<hr>

<form action="/update_work_relationship/<%= @work_relationship.id %>" method="post">

  <div class="form-group">
    <label for="professional_id">
      Professional
    </label>

    <%= select_tag(:professional_id, options_from_collection_for_select(Professional.all, :id, :created_at, @work_relationship.professional_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="office_id">
      Office
    </label>

    <%= select_tag(:office_id, options_from_collection_for_select(Office.all, :id, :name, @work_relationship.office_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update work relationship
  </button>
</form>

<hr>

<a href="/work_relationships">
  Go back
</a>
