<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Patient #<%= @patient.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/patients" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/patients/<%= @patient.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit patient
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Email
      </dt>
      <dd>
        <%= @patient.email %>
      </dd>

      <dt>
        Password
      </dt>
      <dd>
        <%= @patient.password %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@patient.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@patient.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "patient_templates/patient_appointments" %>
  </div>
</div>
