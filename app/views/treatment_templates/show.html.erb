<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Treatment #<%= @treatment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/treatments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link treatment start -->
      <div class="col">
        <a href="/treatments/<%= @treatment.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit treatment
        </a>
      </div>
      <!-- Edit link treatment end -->

      <!-- Delete link treatment start -->
      <div class="col">
        <a href="/delete_treatment/<%= @treatment.id %>" class="btn btn-block btn-outline-secondary">
          Delete treatment
        </a>
      </div>
      <!-- Delete link treatment end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @treatment.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@treatment.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@treatment.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

