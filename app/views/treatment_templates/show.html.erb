<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Treatment #<%= @treatment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/treatments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/treatments/<%= @treatment.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit treatment
        </a>
      </div>

      <div class="col">
        <a href="/delete_treatment/<%= @treatment.id %>" class="btn btn-block btn-outline-secondary">
          Delete treatment
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @treatment.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@treatment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@treatment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "treatment_templates/treatment_charges" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "treatment_templates/treatment_notes" %>
  </div>
</div>
