<!-- Validation failure messages -->
<% if @treatment.present? %>
  <% if @treatment.errors.any? %>
    <% @treatment.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new treatment
</h1>


<hr>

<!-- Form treatment start -->
<form action="/create_treatment" method="post">
<!-- Form treatment end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @treatment.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create treatment
  </button>
</form>

<hr>

<a href="/treatments">
  Go back
</a>
