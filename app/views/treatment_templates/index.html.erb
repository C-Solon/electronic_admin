<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All treatments
    </h1>

    <a href="/treatments/new" class="btn btn-block btn-outline-secondary">
      Add a new treatment
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "treatment_templates/treatments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @treatments.each do |treatment| %>
      <tr>
        <td>
          <%= treatment.id %>
        </td>

        <td>
          <%= treatment.name %>
        </td>

        <td>
          <%= time_ago_in_words(treatment.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(treatment.updated_at) %> ago
        </td>

        <td>
          <a href="/treatments/<%= treatment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @treatments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
