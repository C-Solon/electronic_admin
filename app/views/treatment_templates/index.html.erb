<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All treatments
    </h1>

    <a href="/treatments/new" class="btn btn-block btn-outline-secondary">
      Add a new treatment
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @treatments.each do |treatment| %>
      <tr>
        <!-- Display treatment.id start -->
        <td>
          <%= treatment.id %>
        </td>
        <!-- Display treatment.id end -->

        <!-- Display treatment.name start -->
        <td>
          <%= treatment.name %>
        </td>
        <!-- Display treatment.name end -->

        <!-- Display treatment.created_at start -->
        <td>
          <%= time_ago_in_words(treatment.created_at) %> ago
        </td>
        <!-- Display treatment.created_at end -->

        <!-- Display treatment.updated_at start -->
        <td>
          <%= time_ago_in_words(treatment.updated_at) %> ago
        </td>
        <!-- Display treatment.updated_at end -->

        <td>
          <a href="/treatments/<%= treatment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
