<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All specializations
    </h1>

    <a href="/specializations/new" class="btn btn-block btn-outline-secondary">
      Add a new specialization
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Professional
        </th>

        <th>
          Specialty
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @specializations.each do |specialization| %>
      <tr>
        <!-- Display specialization.id start -->
        <td>
          <%= specialization.id %>
        </td>
        <!-- Display specialization.id end -->

        <!-- Display specialization.professional_id start -->
        <td>
          <%= specialization.professional.created_at %>
        </td>
        <!-- Display specialization.professional_id end -->

        <!-- Display specialization.specialty_id start -->
        <td>
          <%= specialization.specialty.created_at %>
        </td>
        <!-- Display specialization.specialty_id end -->

        <!-- Display specialization.created_at start -->
        <td>
          <%= time_ago_in_words(specialization.created_at) %> ago
        </td>
        <!-- Display specialization.created_at end -->

        <!-- Display specialization.updated_at start -->
        <td>
          <%= time_ago_in_words(specialization.updated_at) %> ago
        </td>
        <!-- Display specialization.updated_at end -->

        <td>
          <a href="/specializations/<%= specialization.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @specializations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
