<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Specialization #<%= @specialization.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/specializations" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link specialization start -->
      <div class="col">
        <a href="/specializations/<%= @specialization.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit specialization
        </a>
      </div>
      <!-- Edit link specialization end -->

      <!-- Delete link specialization start -->
      <div class="col">
        <a href="/delete_specialization/<%= @specialization.id %>" class="btn btn-block btn-outline-secondary">
          Delete specialization
        </a>
      </div>
      <!-- Delete link specialization end -->
    </div>

    <dl>
      <dt>
        Professional
      </dt>
      <!-- Display professional_id start -->
      <dd>
        <% if @specialization.professional.present? %>
          <a href="/professionals/<%= @specialization.professional_id %>">
            <%= @specialization.professional.created_at %>
          </a>
        <% end %>
      </dd>
      <!-- Display professional_id end -->

      <dt>
        Specialty
      </dt>
      <!-- Display specialty_id start -->
      <dd>
        <% if @specialization.specialty.present? %>
          <a href="/specialties/<%= @specialization.specialty_id %>">
            <%= @specialization.specialty.created_at %>
          </a>
        <% end %>
      </dd>
      <!-- Display specialty_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@specialization.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@specialization.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
